<html>
<header>
<h1>Twitter</h1>
<p><%= notice %></p>
</header>

<div class= "home-content">
<body>
<table>
  <tr>
    <th>All your tweets</th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= user.content %></td>
    <div class= "detail">
    <td><button type="button" class="btn btn-default"><%= link_to '詳細を確認する', user_path(user.id) %></button></td>
      <td><button type="button" class="btn btn-default"><%= link_to 'ブログを削除する', user_path(user.id), method: :delete , data: { confirm: 'Are you sure？' } %></button></td>
    <td><button type="button" class="btn btn-default"><%= link_to "ツイートを編集する", edit_user_path(user.id) %></button></td>
  </tr>
  <% end %>
</table>
</div>

<footer>
  <div class= "sending">
  <%=image_tag("twi.png", width: 80, alt: "サンプル画像") %>
  <button type="button" class="btn btn-primary"><%= link_to 'Tweet',new_user_path %>
</footer>

</body>
</html>

